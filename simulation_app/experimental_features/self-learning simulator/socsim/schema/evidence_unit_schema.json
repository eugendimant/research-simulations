{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "EvidenceUnit",
  "type": "object",
  "required": [
    "id",
    "type",
    "when",
    "effect",
    "provenance"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "param_shift",
        "moment_target",
        "structural_estimate"
      ]
    },
    "when": {
      "type": "object",
      "description": "Feature match pattern. Keys are feature names; values are literals or lists."
    },
    "effect": {
      "type": "object",
      "description": "For param_shift: param->delta_mean; for moment_target: moment->target; for structural_estimate: param->estimate."
    },
    "uncertainty": {
      "type": "object",
      "properties": {
        "se": {
          "type": "number"
        },
        "ci_low": {
          "type": "number"
        },
        "ci_high": {
          "type": "number"
        },
        "n": {
          "type": "integer"
        }
      },
      "additionalProperties": true
    },
    "weight": {
      "type": "number",
      "default": 1.0
    },
    "notes": {
      "type": "string"
    },
    "provenance": {
      "type": "object",
      "required": [
        "source_type",
        "title",
        "extraction"
      ],
      "properties": {
        "source_type": {
          "type": "string",
          "enum": [
            "doi",
            "url",
            "arxiv",
            "openalex",
            "other"
          ]
        },
        "title": {
          "type": "string"
        },
        "authors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "year": {
          "type": "integer"
        },
        "doi": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "extraction": {
          "type": "object"
        }
      },
      "additionalProperties": true
    },
    "quality": {
      "type": "object",
      "properties": {
        "evidence_type": {
          "type": "string"
        },
        "risk_of_bias": {
          "type": "string"
        },
        "sample_size": {
          "type": [
            "integer",
            "null"
          ]
        },
        "notes": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "applicability": {
      "type": "object",
      "properties": {
        "context_features": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false,
  "allOf": [
    {
      "if": {
        "properties": {
          "provenance": {
            "properties": {
              "source_type": {
                "const": "doi"
              }
            }
          }
        }
      },
      "then": {
        "properties": {
          "provenance": {
            "required": [
              "doi"
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "provenance": {
            "properties": {
              "source_type": {
                "const": "url"
              }
            }
          }
        }
      },
      "then": {
        "properties": {
          "provenance": {
            "required": [
              "url"
            ]
          }
        }
      }
    }
  ]
}